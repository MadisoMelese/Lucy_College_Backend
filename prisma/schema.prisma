generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================================
// 0. AUTHENTICATION & ROLE MANAGEMENT
// ==========================================================

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())

  // Relations
  student  Student?
  lecturer Lecturer?
}


enum Role {
  SUPERADMIN
  REGISTRAR
  FINANCE
  LECTURER
  STUDENT
}

// ==========================================================
// 1. REGISTRAR MODULE (Students, Departments, Courses)
// ==========================================================

model Student {
  id             Int       @id @default(autoincrement())
  studentId      String    @unique
  userId         Int       @unique
  firstName      String
  middleName     String?
  lastName       String
  dateOfBirth    DateTime?
  email          String    @unique
  phone          String?
  enrollmentDate DateTime  @default(now())
  status         String    @default("ACTIVE")

  // Relations
  user          User                 @relation(fields: [userId], references: [id])
  registrations CourseRegistration[]
  payments      Payment[]
  invoices      Invoice[]
}
// department model defined later (keep single consolidated definition) 

model Program {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  description   String?
  durationYears Int            @default(3)
  departmentId  Int
  feeStructures FeeStructure[]
  department    Department     @relation(fields: [departmentId], references: [id])
}

// ==========================================================
// COURSES, SEMESTERS, ACADEMIC YEARS
// ==========================================================

model AcademicYear {
  id        Int        @id @default(autoincrement())
  yearLabel String // e.g. "2024/2025"
  semesters Semester[]
}

model Semester {
  id             Int          @id @default(autoincrement())
  name           String // "Semester I", "Semester II"
  academicYearId Int
  academicYear   AcademicYear @relation(fields: [academicYearId], references: [id])

  registrations CourseRegistration[]
}

model Faculty {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  facultyCode        String    @unique
  departments Department[]
}

model Department {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  departmentCode  String    @unique 
  facultyCode     String 
  faculty         Faculty   @relation(fields: [facultyCode], references: [facultyCode])
  programs  Program[]
  lecturers Lecturer[]
  courses   Course[]
}

model Course {
  id          Int     @id @default(autoincrement())
  code        String  @unique
  title       String
  credits     Int
  description String?
  tuitionFee  Decimal @default(0.00) @db.Decimal(10, 2)

  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])

  registrations CourseRegistration[]
}

// ==========================================================
// COURSE REGISTRATION & GRADES
// ==========================================================

model CourseRegistration {
  id         Int     @id @default(autoincrement())
  studentId  Int
  courseId   Int
  semesterId Int
  grade      String?

  student  Student  @relation(fields: [studentId], references: [id])
  course   Course   @relation(fields: [courseId], references: [id])
  semester Semester @relation(fields: [semesterId], references: [id])

  @@unique([studentId, courseId, semesterId])
}

// ==========================================================
// 2. FINANCE MODULE (Fees, Payments, Invoices)
// ==========================================================

model FeeStructure {
  id          Int     @id @default(autoincrement())
  programId   Int
  yearOfStudy Int // 1st year, 2nd year...
  amount      Decimal @db.Decimal(10, 2)

  program Program @relation(fields: [programId], references: [id])
}

model Invoice {
  id        Int           @id @default(autoincrement())
  studentId Int
  amount    Decimal       @db.Decimal(10, 2)
  dueDate   DateTime
  status    InvoiceStatus @default(PENDING)

  student  Student   @relation(fields: [studentId], references: [id])
  payments Payment[]
}

enum InvoiceStatus {
  PAID
  PENDING
  OVERDUE
}

model Payment {
  id            Int      @id @default(autoincrement())
  studentId     Int
  invoiceId     Int?
  amountPaid    Decimal  @db.Decimal(10, 2)
  paymentDate   DateTime @default(now())
  paymentMethod String?

  student Student  @relation(fields: [studentId], references: [id])
  invoice Invoice? @relation(fields: [invoiceId], references: [id])
}

// ==========================================================
// 3. WEBSITE MODULE (Public Content)
// ==========================================================

model NewsEvent {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
  imageUrl  String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
  publishedAt DateTime   @default(now())
  expiresAt     DateTime?
  category String
  isPublic Boolean  @default(true)
}
model Announcement {
  id       Int      @id @default(autoincrement())
  title    String
  content  String
  category String
  createdAt DateTime @default(now())
  expiresAt DateTime 
  isPublic Boolean  @default(true)
}

model Inquiry {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  status    String   @default("PENDING")
}

// ==========================================================
// LECTURERS
// ==========================================================

model Lecturer {
  id           Int     @id @default(autoincrement())
  userId       Int     @unique
  firstName      String
  middleName     String?
  lastName       String
  departmentId Int
  title        String? // Ms., Dr., Prof. etc.
  bio          String?
  imageUrl     String? 
  phone        String?
  isActive     Boolean @default(true)
  user       User       @relation(fields: [userId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
}

model About {
  id         Int      @id @default(autoincrement())
  title      String
  subtitle   String?
  content    String
  mission    String?
  vision     String?
  values     String?
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())
}


// Homepage content
model Homepage {
  id         Int      @id @default(autoincrement())
  heroTitle  String?
  heroSubtitle String?
  heroCtaText  String?
  heroCtaUrl   String?
  introText  String?   // short intro paragraph for homepage
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Hero slider (multiple slides)
model HeroSlide {
  id        Int      @id @default(autoincrement())
  title     String?
  subtitle  String?
  imageUrl  String   // required: image URL (cdn/local)
  ctaText   String?
  ctaUrl    String?
  order     Int      @default(0)    // slide ordering
  isActive  Boolean  @default(true) // show/hide
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Gallery images
model GalleryImage {
  id         Int      @id @default(autoincrement())
  title      String?
  caption    String?
  imageUrl   String   // required
  category   String?  // e.g., "campus", "events", etc.
  order      Int      @default(0)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Management / Team members
model TeamMember {
  id         Int      @id @default(autoincrement())
  fullName   String
  role       String   // e.g., "Principal", "Registrar"
  bio        String?
  imageUrl   String?  // optional portrait url
  email      String?  @unique
  phone      String?
  order      Int      @default(0)
  isActive   Boolean  @default(true)
  social     Json?    // optional JSON object for social links { linkedin: "...", twitter: "..." }
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Token blacklist for server-side token revocation (refresh or access tokens)
model BlacklistedToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}


